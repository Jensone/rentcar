{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-warning">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 fw-normal">RentCar</h1>
        <p class="lead fw-normal">Que voulez vous louer aujourd'hui ?</p>
        <a class="btn btn-primary" href={{ path('vehicules') }}>Voir tous les véhicules</a>
    </div>
</div>

<div class="row d-flex justify-content-center gap-3">
    {% for item in vehicules %}
        {% if vehicules <= 0 %}
            <p>Il n'y a pas de véhicules en location</p>
        {% else %}
            <div class="card col-md-3">
                <div class="card-body">
                    <h5 class="card-title">{{ item.modele.marque.nom }} {{ item.modele.nom }}</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">À partir de</h6>
                    <p class="card-text">
                        {{ item.prix }} € / jour
                    </p>
                    <a href={{ path('vehicule', { id : item.id }) }} class="card-link btn btn-outline-primary">Voir la fiche</a>
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>



{% endblock %}
